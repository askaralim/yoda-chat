# MySQL Configuration (if needed)
# MYSQL_HOST=localhost
# MYSQL_USER=root
# MYSQL_PASSWORD=your_password
# MYSQL_DATABASE=yoda_chat

# Server Configuration
PORT=3000
NODE_ENV=production
